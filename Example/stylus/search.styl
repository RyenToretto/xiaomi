
/*header*/
header {
  width: 100%;
  height: 40px;
  background: #333;
  .top {
    width: 1226px;
    height: 40px;
    line-height: 40px;
    .left {
      ul {
        li {
          float: left;
          font-size: 12px;
          color: #ccc;
